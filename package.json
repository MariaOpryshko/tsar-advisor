{
  "name": "tsar-advisor",
  "displayName": "TSAR Advisor",
  "description": "This tool proposes some useful information about a program to simplify its parallelization.",
  "version": "0.0.3",
  "publisher": "DVM",
  "homepage": "http://dvm-system.org",
  "keywords": [
    "parallel programming",
    "program analysis",
    "automated parallelization"
  ],
  "license": "SEE LICENSE IN LICENSE.txt",
  "engines": {
    "vscode": "^1.8.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:tsar.start",
    "onCommand:tsar.stop"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "tsar.start",
        "title": "TSAR: Analyze file"
      },
      {
        "command": "tsar.stop",
        "title": "TSAR: Close session"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "tsar.start",
          "when": "editorLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.start",
          "when": "editorLangId == 'c'",
          "group": "1_tsar"
        }
      ],
      "explorer/context": [
        {
          "command": "tsar.start",
          "when": "resourceLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.start",
          "when": "resourceLangId == 'c'",
          "group": "1_tsar"
        }
      ]
    }
  },
  "scripts": {
    "prepublish-clean": "rimraf out",
    "prepublish-ts": "tsc -p ./",
    "prepublish-css": "catw ./html/*.css > ./out/src/style.css",
    "prepublish-addon": "node ./addon/addon.js -noW ../apc/sapfor/bcl ../vs/sapfor/analyzers/tsar/tools/tsar-server ./out/src",
    "vscode:prepublish": "npm-run-all -n prepublish-clean prepublish-ts prepublish-css prepublish-addon",
    "watch-ts": "tsc -watch -p ./",
    "watch-css": "catw ./html/*.css -o ./out/src/style.css -v",
    "watch-addon": "node ./addon/addon.js -d ../apc/sapfor/bcl ../vs/sapfor/analyzers/tsar/tools/tsar-server ./out/src",
    "watch": "npm-run-all -c -n -p watch-ts watch-css watch-addon"
  },
  "devDependencies": {
    "typescript": "^3.6.4",
    "@types/vscode": "^1.38.0",
    "@types/node": "^10.11.0",
    "catw": "~0.0.1",
    "copy": "~0.3.0",
    "watch": "~1.0.1",
    "npm-run-all": "~3.1.2",
    "node-gyp": "^5.0.0",
    "rimraf": "~2.5.4"
  },
  "extensionDependencies": [],
  "dependencies": {
    "bootstrap": "~4.3.1",
    "jquery": "~3.3.1"
  }
}
