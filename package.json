{
  "name": "tsar-advisor",
  "displayName": "TSAR Advisor",
  "description": "This tool performs user-guided program transformations and proposes some useful information about a program to simplify its parallelization.",
  "version": "0.0.3",
  "publisher": "DVM",
  "homepage": "http://dvm-system.org",
  "keywords": [
    "parallel programming",
    "program analysis",
    "program transformation",
    "automated parallelization"
  ],
  "license": "SEE LICENSE IN LICENSE.txt",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:tsar.start",
    "onCommand:tsar.analysis.check",
    "onCommand:tsar.transform.propagate",
    "onCommand:tsar.transform.inline",
    "onCommand:tsar.transform.dedecls",
    "onCommand:tsar.transform.rename",
    "onCommand:tsar.parallel.openmp",
    "onCommand:tsar.parallel.dvmh"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "tsar.start",
        "title": "TSAR Analyze file"
      },
      {
        "command": "tsar.stop",
        "title": "TSAR Close session"
      },
      {
        "command": "tsar.analysis.check",
        "title": "TSAR Check User-defined Properties"
      },
      {
        "command": "tsar.transform.propagate",
        "title": "TSAR Expression Propagation"
      },
      {
        "command": "tsar.transform.inline",
        "title": "TSAR Function Inlining"
      },
      {
        "command": "tsar.transform.rename",
        "title": "TSAR Local Renaming"
      },
      {
        "command": "tsar.transform.dedecls",
        "title": "TSAR Dead Declarations Elimination"
      },
      {
        "command": "tsar.parallel.openmp",
        "title": "TSAR Parallelization with OpenMP"
      },
      {
        "command": "tsar.parallel.dvmh",
        "title": "TSAR Parallelization with DVMH"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "tsar.parallel.dvmh",
          "when": "editorLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.parallel.dvmh",
          "when": "editorLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.parallel.openmp",
          "when": "editorLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.parallel.openmp",
          "when": "editorLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.rename",
          "when": "editorLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.rename",
          "when": "editorLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.dedecls",
          "when": "editorLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.dedecls",
          "when": "editorLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.inline",
          "when": "editorLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.inline",
          "when": "editorLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.propagate",
          "when": "editorLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.propagate",
          "when": "editorLangId == 'c'",
          "group": "1_tsar"
        }, {
          "command": "tsar.analysis.check",
          "when": "editorLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.analysis.check",
          "when": "editorLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.start",
          "when": "editorLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.start",
          "when": "editorLangId == 'c'",
          "group": "1_tsar"
        }
      ],
      "explorer/context": [
        {
          "command": "tsar.parallel.dvmh",
          "when": "resourceLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.parallel.dvmh",
          "when": "resourceLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.parallel.openmp",
          "when": "resourceLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.parallel.openmp",
          "when": "resourceLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.rename",
          "when": "resourceLangId' == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.rename",
          "when": "resourceLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.dedecls",
          "when": "resourceLangId' == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.dedecls",
          "when": "resourceLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.inline",
          "when": "resourceLangId' == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.inline",
          "when": "resourceLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.propagate",
          "when": "resourceLangId' == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.transform.propagate",
          "when": "resourceLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.analysis.check",
          "when": "resourceLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.analysis.check",
          "when": "resourceLangId == 'c'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.start",
          "when": "resourceLangId == 'cpp'",
          "group": "1_tsar"
        },
        {
          "command": "tsar.start",
          "when": "resourceLangId == 'c'",
          "group": "1_tsar"
        }
      ]
    }
  },
  "scripts": {
    "prepublish-clean": "rimraf out",
    "prepublish-ts": "tsc -p ./",
    "prepublish-css": "catw ./html/*.css > ./out/src/style.css",
    "prepublish-addon": "node ./addon/addon.js  -noW ../apc/sapfor/bcl ../vs/sapfor/analyzers/tsar/tools/tsar-server ./out/src",
    "vscode:prepublish": "npm-run-all -n prepublish-clean prepublish-ts prepublish-css prepublish-addon",
    "watch-ts": "tsc -watch -p ./",
    "watch-css": "catw ./html/*.css -o ./out/src/style.css -v",
    "watch-addon": "node ./addon/addon.js -d ../apc/sapfor/bcl ../vs/sapfor/analyzers/tsar/tools/tsar-server ./out/src",
    "addon": "node ./addon/addon.js -noW -d ../apc/sapfor/bcl ../vs/sapfor/analyzers/tsar/tools/tsar-server ./out/src",
    "watch": "npm-run-all -c -n -p watch-ts watch-css",
    "watch-all": "npm-run-all -c -n -p watch-ts watch-css watch-addon"
  },
  "devDependencies": {
    "typescript": "^3.6.4",
    "@types/vscode": "^1.38.0",
    "@types/node": "^10.11.0",
    "catw": "~0.0.1",
    "copy": "~0.3.0",
    "watch": "~1.0.1",
    "npm-run-all": "~3.1.2",
    "node-gyp": "^5.0.0",
    "rimraf": "~2.5.4"
  },
  "extensionDependencies": [],
  "dependencies": {
    "bootstrap": "~4.3.1",
    "jquery": "~3.3.1"
  }
}
